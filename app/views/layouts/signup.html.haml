!!! 5
%html.splash-page(lang="en")
  %head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#")

    = head_metadata(content_for?(:title) ? yield(:title) : "MyUSA", content_for?(:meta_description) ? yield(:meta_description) : "A platform for connecting people and government")
    
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag '/favicon.ico', :rel => 'shortcut icon'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :sizes => '72x72', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :sizes => '114x114', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :sizes => '144x144', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'

    = javascript_include_tag 'modernizr' 

  %body.sign-up   
    %div#wrap
      %div#main
        .nav-container.group
          .logo
            .row
              .ten.columns.centered
                %p.sign-in-bar.right
                  =t(:sign_in_prompt)
                  =link_to t(:sign_in_link), sign_in_path
                  
            .six.columns.centered
              %h1
                MyUSA
          = yield
            
          .secondary
            .row 
              .ten.columns.centered
                %ul.centered
                  %li
                    = link_to t(:about_myusa), "http://myusa.tumblr.com/about", :class => 'info'
                  %li
                    = link_to t(:developers), developer_path, :class => 'info'
                  %li
                    = link_to t(:digital_government), "http://www.whitehouse.gov/sites/default/files/omb/egov/digital-government/digital-government.html", :class => 'info'
                  %li
                    = link_to t(:privacy_policy), privacy_policy_path, :class => 'info'
                  %li
                    = link_to t(:terms_of_service), terms_of_service_path, :class => 'info'
      /
        Javascripts
        \==================================================
      / Placed at the end of the document so the pages load faster
      = javascript_include_tag "application"
      = content_for :scripts
      = analytics_init if Rails.env.production?